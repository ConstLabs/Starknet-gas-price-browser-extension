{
  "name": "Starknet Gas Price",
  "version": "1.0.1",
  "manifest_version": 3,
  "description": "Starknet gas price info, always up to date, from multiple sources",
  "homepage_url": "https://github.com/cryptonerdcn/Starknet-gas-price-browser-extension",
  "permissions": ["alarms", "storage"],
  "icons": {
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "24": "icons/icon-24.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Starknet Gas Price",
    "default_popup": "popup.html"
  }
}
